      -- Custom transformation function for Shopify dev
      local function shopify_dev_transform(cmd)
        -- Only proceed if dev integration is enabled and dev.yml exists
        if not vim.g.test_ruby_dev_enabled or not has_shopify_dev() then
          return cmd
        end

        -- Only transform Rails test commands
        if not string.match(cmd, "%./bin/rails test") then
          return cmd
        end

        -- Replace ./bin/rails test with dev test
        cmd = string.gsub(cmd, "%./bin/rails test", "dev test")

        -- Determine if we should add parallel flag
        local should_add_parallel = false
        local threshold = vim.g.test_ruby_dev_parallel_threshold or 500

        -- Check if this is a nearest test (single test) - don't parallelize
        if string.match(cmd, "dev test.*:%d+") then
