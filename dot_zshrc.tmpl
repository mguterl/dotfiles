# ============================================================================
# Oh-My-Zsh
# ============================================================================
export ZSH="$HOME/.oh-my-zsh"
plugins=(
  docker
  git
  zsh-interactive-cd
  zsh-autosuggestions
)
source $ZSH/oh-my-zsh.sh

# ============================================================================
# Homebrew (must come before mise)
# ============================================================================
{{- if eq .chezmoi.os "darwin" }}
[[ -x /opt/homebrew/bin/brew ]] && eval $(/opt/homebrew/bin/brew shellenv)
{{- end }}

# ============================================================================
# Environment Variables
# ============================================================================
export EDITOR=nvim
export DISABLE_AUTO_TITLE='true'

# ============================================================================
# Aliases
# ============================================================================
alias rgi='rg --ignore-case'
alias rgh='rg --hidden'
alias rga='rg --hidden --no-ignore'

# ============================================================================
# Functions
# ============================================================================
# https://twitter.com/derrickreimer/status/999667665118605313/photo/1
function branchify {
  git branch $1 && git reset --hard HEAD~ && git checkout $1
}

# ============================================================================
# Work Environment
# ============================================================================
{{- if .work_mac }}
[[ -f /opt/dev/sh/chruby/chruby.sh ]] && { type chruby >/dev/null 2>&1 || chruby () { source /opt/dev/sh/chruby/chruby.sh; chruby "$@"; } }

[ -f /opt/dev/dev.sh ] && source /opt/dev/dev.sh

# Added by tec agent
[[ -x /Users/mguterl/.local/state/tec/profiles/base/current/global/init ]] && eval "$(/Users/mguterl/.local/state/tec/profiles/base/current/global/init zsh)"

# Dev tree + tmuxp integration
dt() {
  local worktree=$1

  # If already in tmux, detach first
  if [ -n "$TMUX" ]; then
    tmux detach-client
  fi

  # Load worktree-specific tmuxp session
  tmuxp load "$worktree"
}
{{- end }}

# ============================================================================
# Tool Initializations
# ============================================================================
command -v fzf >/dev/null 2>&1 && source <(fzf --zsh)

# Activate mise to override Homebrew versions
eval "$($(brew --prefix)/bin/mise activate zsh)"

# Personal bin directories have highest priority
export PATH="$HOME/bin:$HOME/.local/bin:$PATH"

# ============================================================================
# Prompt (must be last)
# ============================================================================
fpath+=("$(brew --prefix)/share/zsh/site-functions")
autoload -U promptinit; promptinit

# Pure prompt - Catppuccin Mocha (true color)
zstyle :prompt:pure:path color '#89b4fa'
zstyle :prompt:pure:git:branch color '#a6adc8'
zstyle :prompt:pure:git:dirty color '#f5c2e7'
zstyle :prompt:pure:git:arrow color '#94e2d5'
zstyle :prompt:pure:prompt:success color '#cba6f7'
zstyle :prompt:pure:prompt:error color '#f38ba8'
zstyle :prompt:pure:execution_time color '#f9e2af'
zstyle :prompt:pure:virtualenv color '#a6e3a1'

# Hide nix-shell environment name
zstyle :prompt:pure:environment:nix-shell show no

prompt pure
