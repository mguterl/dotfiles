[user]
	name = Mike Guterl
	email = {{ .email | quote }}
[core]
	editor = code -w
	excludesfile = ~/.gitignore
	commitGraph = true
[alias]
        st = status
        ci = commit
        co = checkout
        br = branch
[init]
        defaultBranch = main
[credential]
	helper =
	helper = store --file /opt/dev/var/private/git_credential_store
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
